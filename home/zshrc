# _________________________ [ FUNCTIONS ] _____________________________________
# --- Shortcuts for pacman.
pakman () {
	case $1 in
		-s)
			echo "Looking for $2...\n"
			pacman -Ss $2
			;;
		-u)
			echo "Upgrading...\n"
			sudo pacman -Syu
			;;
		-i)
			echo "Installing $2...\n"
			sudo pacman -S $2
			;;
		-r)
			echo "Removing $2...\n"
			sudo pacman -Rsun $2
			;;
		-d)
			echo "Verifying if $2 is already installed...\n"
			pacman -Qs $2
			;;
		-l)
			echo "Installed packages:\n"
			pacman -Qe
			;;
		*)
			echo "Unknown option \"$1\""
			;;
	esac
}

aur () {
	case $1 in
		-s)
			echo "Looking for $2...\n"
			paru -Ss $2
			;;
		-i)
			echo "Installing $2...\n"
			paru -S $2
			;;
	esac
}

# --- Remove files securely
xred () {
	sync
	if [[ ! -w $1 || ( -d $1 && ! -w $1 ) ]]; then
		echo "Permission denied!"
		exit
	elif [[ -d $1 ]]; then
		find $1 -type f | xargs scrub -Sfp usarmy > /dev/null 2>&1
		find $1 -type f | xargs shred -fn 32 -zux
		rm -drf $1
		echo "All clean!\n"
	else
		scrub -fp usarmy $1 > /dev/null 2>&1
		shred -fn 32 -zux $1
		echo "All clean!\n"
	fi
}

nv () {
	if [[ -w $1 ]]; then
		nvim $1
	elif [[ -a $1 ]]; then
		sudo nvim $1
	else
		nvim $1
	fi
}

img () {
	if [[ $TERMINAL == "wezterm" ]]; then
		wezterm imgcat $1
	elif [ $TERMINAL == "kitty" ]; then
		kitty +kitten icat $1
	else
		echo "Terminal $TERM no compatible"
	fi
}

